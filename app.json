{
  "expo": {
    "name": "qrky",
    "slug": "qrky",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "scheme": "myapp",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow QRKY to access your camera.",
        "NSMicrophoneUsageDescription": "Allow QRKY to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA"
      ],
      "package": "com.ajgeel.qrky"
    },
    "plugins": [
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow QRKY to access your camera."
        }
      ],
      "expo-router"
    ],
    "extra": {
      "eas": {
        "projectId": "901cc36d-697e-447e-ac1d-2389470becc4"
      }
    }
  }
}
